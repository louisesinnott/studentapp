<h1>New Subject Feedback</h1>
<div class="row">
  <div class="span8 offset2">

<%= form_for(@feedback) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      

    <%= f.label :subject_name, 'Subject Name' %>
   
  <%= collection_select(:subject_name, :name, Course.all, :course_id, :subject_name, {}, { :multiple => true } )%>
   

    <%= f.label  :Strengths, 'Strengths' %>
    <%= f.text_area  :strengths %>

    <%= f.label :Weaknesses, 'Weaknesses' %>
    <%= f.text_area :weaknesses %>

     <%= f.label :Recommendations, 'Recommendations' %>
    <%= f.text_area :recommendations %>

    <%= f.label :rating, 'Rating' %>
    <%= f.radio_button :rating, '1', :checked => true %> 1
    <%= f.radio_button :rating, '2' %> 2
    <%= f.radio_button :rating, '3' %> 3
    <%= f.radio_button :rating, '4' %> 4
    <%= f.radio_button :rating, '5' %> 5
    <br><br>
    


<%= f.submit "Post", class: "btn btn-large btn-primary" %>
    <% end %>
</div>
</div>
