<% if signed_in? %>
      <div class="row">
        <aside class="span4">
          <section>
            <%= render 'shared/user_info' %>
          </section>
          <section>
            <%= render 'shared/feedback_form' %>
          </section>
        </aside>
      </div>  
    <% else %>
      <div class="center hero-unit">
        <h1>Welcome to the Subject Feedback App</h1>

        <h2>
          This is an application where students can give feedback on the subjects hey have studied. 
        </h2>

        <%= link_to "Sign up now", signup_path, 
                                    class: "btn btn-large btn-primary" %>
      <%= link_to "New Feedback", new_feedback_path, 
                                    class: "btn btn-large btn-primary" %>

      </div>

      <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
    <% end %> 